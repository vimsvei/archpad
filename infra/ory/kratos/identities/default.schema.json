{
  "$id": "https://archpad.local/kratos/identities/default.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ArchPad User",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "name": {
      "type": "string"
    },
    "tenant_ids": {
      "type": "array",
      "items": { "type": "string" }
    },
    "roles": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": [ "email" ],
  "additionalProperties": false
}
