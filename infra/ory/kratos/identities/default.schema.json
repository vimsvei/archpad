{
  "$id": "https://archpad.local/kratos/identities/default.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ArchPad User",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "tenants": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" },
          "ory.sh/kratos": {
            "ui": {
              "hidden": true
            }
          }
        },
        "roles": {
          "type": "array",
          "items": { "type": "string" },
          "ory.sh/kratos": {
            "ui": {
              "hidden": true
            }
          }
        }
      },
      "required": [ "email" ],
      "additionalProperties": false
    }
  },
  "required": ["traits"],
  "additionalProperties": false
}
