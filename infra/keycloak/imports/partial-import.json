{
  "ifResourceExists": "OVERWRITE",
  "roles": {
    "realm": [
      { "name": "CHIEF_ARCHITECT" },
      { "name": "ENTERPRISE_ARCHITECT" },
      { "name": "SOLUTION_ARCHITECT" },
      { "name": "SECURITY_ARCHITECT" },
      { "name": "INFRASTRUCTURE_ARCHITECT" }
    ]
  },
  "clients": [
    {
      "clientId": "archpad-portal",
      "protocol": "openid-connect",
      "publicClient": true,
      "redirectUris": [
        "http://app.localhost/api/auth/callback/keycloak",
        "http://localhost:3000/api/auth/callback/keycloak"
      ],
      "webOrigins": [
        "http://app.localhost",
        "http://localhost:3000"
      ],
      "rootUrl": "http://app.localhost",
      "baseUrl": "/",
      "adminUrl": "http://app.localhost",

      "attributes": {
        "pkce.code.challenge.method": "S256",
        "post.logout.redirect.uris": "http://app.localhost/login\nhttp://localhost:3000/login"
      },
      "protocolMappers": [
        { "name": "x-hasura-default-role", "protocol": "openid-connect", "protocolMapper": "oidc-hardcoded-claim-mapper",
          "config": { "claim.name": "x-hasura-default-role", "claim.value": "user", "id.token.claim": "true", "access.token.claim": "true", "userinfo.token.claim": "true" } },
        { "name": "x-hasura-allowed-roles", "protocol": "openid-connect", "protocolMapper": "oidc-hardcoded-claim-mapper",
          "config": { "claim.name": "x-hasura-allowed-roles", "claim.value": "[\"user\",\"public\"]", "jsonType.label": "JSON",
            "id.token.claim": "true", "access.token.claim": "true", "userinfo.token.claim": "true" } }
      ]
    }
  ]
}
