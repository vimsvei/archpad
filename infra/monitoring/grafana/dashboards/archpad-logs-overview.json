{
  "uid": "archpad-logs",
  "title": "Archpad / Logs (Loki)",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["archpad", "logs"],
  "time": { "from": "now-15m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki", "name": "Loki" },
        "query": "label_values(container)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".+",
        "current": { "text": "All", "value": ".+" }
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Log lines rate (per container)",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 12 },
      "datasource": { "type": "loki", "uid": "loki", "name": "Loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (container) (rate({container=~\"$service\"}[1m]))",
          "queryType": "range"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "options": { "legend": { "displayMode": "table", "placement": "right" } }
    }
  ]
}


