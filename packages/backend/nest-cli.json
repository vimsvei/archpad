{
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": ".",
  "compilerOptions": {
    "tsConfigPath": "tsconfig.json",
    "deleteOutDir": true,
    "webpack": false
  },
  "projects": {
    "arch-repo-service": {
      "type": "application",
      "root": "apps/arch-repo-service",
      "entryFile": "main",
      "sourceRoot": "apps/arch-repo-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/arch-repo-service/tsconfig.app.json"
      }
    },
    "hasura-sync-service": {
      "type": "application",
      "root": "apps/hasura-sync-service",
      "entryFile": "main",
      "sourceRoot": "apps/hasura-sync-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/hasura-sync-service/tsconfig.app.json"
      }
    },
    "health-checker": {
      "type": "library",
      "root": "libs/health-checker",
      "entryFile": "index",
      "sourceRoot": "libs/health-checker/src",
      "compilerOptions": {
        "tsConfigPath": "libs/health-checker/tsconfig.lib.json"
      }
    },
    "logger": {
      "type": "library",
      "root": "libs/logger",
      "entryFile": "index",
      "sourceRoot": "libs/logger/src",
      "compilerOptions": {
        "tsConfigPath": "libs/logger/tsconfig.lib.json"
      }
    },
    "models": {
      "type": "library",
      "root": "libs/models",
      "entryFile": "index",
      "sourceRoot": "libs/models/src",
      "compilerOptions": {
        "tsConfigPath": "libs/models/tsconfig.lib.json"
      }
    },
    "schema-initializer": {
      "type": "library",
      "root": "libs/schema-initializer",
      "entryFile": "index",
      "sourceRoot": "libs/schema-initializer/src",
      "compilerOptions": {
        "tsConfigPath": "libs/schema-initializer/tsconfig.lib.json"
      }
    },
    "vault-config": {
      "type": "library",
      "root": "libs/vault-config",
      "entryFile": "index",
      "sourceRoot": "libs/vault-config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/vault-config/tsconfig.lib.json"
      }
    },
    "tenant-service": {
      "type": "application",
      "root": "apps/tenant-service",
      "entryFile": "main",
      "sourceRoot": "apps/tenant-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/tenant-service/tsconfig.app.json"
      }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    }
  }
}
