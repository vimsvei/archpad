{
  "name": "@archpad/backend",
  "private": true,
  "author": {
    "name": "Aleksandr Zelentsov",
    "email": "contact@zelentsov.solutions"
  },
  "scripts": {
    "build:contracts": "pnpm -w --filter @archpad/contracts build",

    "start:arch-repo": "pnpm -w --filter @archpad/contracts build && nest start arch-repo-service",
    "start:hasura-repo-sync": "nest start hasura-sync-service",

    "start:dev:arch-repo": "pnpm -w --filter @archpad/contracts build && nest start arch-repo-service --watch",
    "start:dev:hasura-repo-sync": "nest start hasura-sync-service --watch",

    "build:arch-repo": "pnpm -w --filter @archpad/contracts build && nest build arch-repo-service",
    "build:hasura-repo-sync": "nest build hasura-sync-service",

    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "env:render": "ROOT_ENV_PATH=../../.env ../scripts/render-env.sh"
  },
  "dependencies": {
    "@archpad/contracts": "workspace:*",
    "@mikro-orm/core": "^6.6.0",
    "@mikro-orm/migrations": "^6.6.0",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.6.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "check-disk-space": "^3.4.0",
    "nestjs-zod": "^5.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^archpad/health-checker(|/.*)$": "<rootDir>/libs/health-checker/src/$1"
    }
  }
}
